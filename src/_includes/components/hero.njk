<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Greeting Text
    const greetingText = document.getElementById("greeting-text");
    let visitorClock = new Date().getHours();
    let visitorMessage = "";

    if(visitorClock <= 12){
      visitorMessage = "Good morning,";
    } else if (visitorClock <= 18){
      visitorMessage = "Good afternoon,";
    } else {
      visitorMessage = "Good evening,";
    }
    greetingText.innerHTML = visitorMessage;


    // Parallax Yasin
    document.addEventListener('scroll', function(e) {
      let windowTop = window.scrollY;

      let heroImage = document.getElementById("heroImage");
      let elementTop = heroImage.offsetTop;

      let animateValue = (windowTop - elementTop) / 2;
      heroImage.style.transform = "translateY("+animateValue+"px)";
    });

  });
</script>
