---
layout: layouts/base.njk
templateClass: tmpl-work
---
<section class="section section-project">
  <div class="project-hero" style="--figure-color-r:{{ color[0] }}; --figure-color-g:{{ color[1] }}; --figure-color-b:{{ color[2] }};">
    <div class="container">
      <div class="section-inner">
        <div>
          <h1 class="project-title">{{ title }}</h1>
          <p class="project-description">{{ description }}</p>
        </div>
        <figure class="project-figure">
          <picture>
            <source srcset="{{ metadata.assets.img }}works/{{ picture }}.webp" type="image/webp">
            <img src="{{ metadata.assets.img }}works/{{ picture }}.jpg" width="795" height="566" alt="{{ title }}" loading="eager">
          </picture>
        </figure>
      </div>
    </div>
  </div>
  <div class="project-meta">
    <div class="container">
      <div class="section-inner">
        <ul class="meta-list">
          <li class="meta-list__item">
            <span class="meta-list__title">Client</span>
            <span class="meta-list__value">{{ title }}</span>
          </li>
          <li class="meta-list__item">
            <span class="meta-list__title">My Role</span>
            <span class="meta-list__value">{{ myRole }}</span>
          </li>
          <li class="meta-list__item">
            <span class="meta-list__title">Sector</span>
            <span class="meta-list__value">{{ sector }}</span>
          </li>
          <li class="meta-list__item">
            <span class="meta-list__title">Project Date</span>
            <span class="meta-list__value">{{ projectDate }}</span>
          </li>
          <li class="meta-list__item">
            <span class="meta-list__title">&nbsp;</span>
            {%- if url %}
            <a href="{{ url }}" class="meta-list__value">Visit</a>
            {%  else %}
            <span class="meta-list__value disabled">No Demo</span>
            {% endif %}
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="project-detail">
    <div class="container-sm">
      <div class="section-inner">
        <section class="article__content">
          {{ content | safe }}
        </section>
      </div>
    </div>
  </div>
</section>

<div class="section section-works">
  <div class="container">
    <div class="section-inner">
      <header class="section-header">
        <h2 class="section-title">Other Works</h2>
        <p class="section-description">Want to check other works? Here it is!</p>
      </header> {%- if nextPost %} {%  else %} {% endif %}
      <div class="works">
        {%- set nextPost = collections.works | getNextCollectionItem(page) %}
        <div class="works__item">
          <figure class="works__figure test" {%- if nextPost %}style="--figure-color-r:{{ nextPost.data.color[0] }}; --figure-color-g:{{ nextPost.data.color[1] }}; --figure-color-b:{{ nextPost.data.color[2] }};"{%  else %} {% endif %}>{%- if nextPost %}<a href="{{ nextPost.url | url }}">
              <picture>
                <source srcset="{{ metadata.assets.img }}works/{{ nextPost.data.picture }}.webp" type="image/webp">
                <img src="{{ metadata.assets.img }}works/{{ nextPost.data.picture }}.jpg" width="795" height="566" alt="{{ nextPost.data.title }}" loading="lazy">
              </picture>
            </a>{%  else %}{% endif %}</figure>
          <div class="works__meta">
            <header class="works__header">
              <div class="works__title">{%- if nextPost %}{{ nextPost.data.title }}{%  else %}{% endif %}</div>
              <a class="works__link" href="{%- if nextPost %}{{ nextPost.data.url }}/{%  else %}javascript:{% endif %}" title="{%- if nextPost %}{{ nextPost.data.title }}{%  else %}No Next Post{% endif %}">{%- if nextPost %}Visit{%  else %}{% endif %}</a>
            </header>
            <p class="works__description">{%- if nextPost %}{{ nextPost.data.description }}{%  else %}{% endif %}</p>
          </div>
        </div>
        {%- set previousPost = collections.works | getPreviousCollectionItem(page) %}
        <div class="works__item">
          <figure class="works__figure" {%- if previousPost %}style="--figure-color-r:{{ previousPost.data.color[0] }}; --figure-color-g:{{ previousPost.data.color[1] }}; --figure-color-b:{{ previousPost.data.color[2] }};"{%  else %} {% endif %}>{%- if previousPost %}<a href="{{ previousPost.url | url }}">
              <picture>
                <source srcset="{{ metadata.assets.img }}works/{{ previousPost.data.picture }}.webp" type="image/webp">
                <img src="{{ metadata.assets.img }}works/{{ previousPost.data.picture }}.jpg" width="795" height="566" alt="{{ previousPost.data.title }}" loading="lazy">
              </picture>
            </a>{%  else %}{% endif %}</figure>
          <div class="works__meta">
            <header class="works__header">
              <div class="works__title">{%- if previousPost %}{{ previousPost.data.title }}{%  else %}{% endif %}</div>
              <a class="works__link" href="{%- if previousPost %}{{ previousPost.data.url }}/{%  else %}javascript:{% endif %}" title="{%- if previousPost %}{{ previousPost.data.title }}{%  else %}No Previous Post{% endif %}">{%- if previousPost %}Visit{%  else %}{% endif %}</a>
            </header>
            <p class="works__description">{%- if previousPost %}{{ previousPost.data.description }}{%  else %}{% endif %}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% include "components/clients.njk" %}

{% include "components/contact-banner.njk" %}
