---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
  addAllPagesToCollections: true
layout: layouts/base.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---

<div class="section section-post">
  <div class="container">
    <div class="section-inner">
      <header class="section-header">
        <h1 class="section-title">{{ tag }}</h1>
      </header>
      <div class="post-cards">
        {% set postslist = collections[ tag ] %}
        {% include "postcard.njk" %}
      </div>
    </div>
  </div>
</div>
